
<div id="create_company" class="modal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" id="close_modal" aria-hidden="true">Ã—</button>
        <h4 class="modal-title">Create Your Company</h4>
      </div>
      <div class="modal-body">
        <%= form_for :company, html:{class: 'form-horizontal'}, url: companies_path do |f| %>
          <fieldset>
            <div class="form-group">
              <%= f.label :name, class: 'col-lg-2 control-label'%>
              <div class="col-lg-8">
                <%= f.text_field :name, required: true, class: 'form-control', :placeholder => "Company Name" %>              
              </div>
            </div>
            
            <div class="form-group">
              <%= f.label :email, class: 'col-lg-2 control-label'%>
              <div class="col-lg-8">
                <%= f.text_field :email, required: true, class: 'form-control', :placeholder => "Email"%>
              </div>
            </div>

            <div class="form-group">
              <%= f.label :password, class: 'col-lg-2 control-label'%>
              <div class="col-lg-8">
                <%= f.password_field :password, required: true, class: 'form-control', :placeholder => "Password"%>
              </div>
            </div>

            <div class="form-group">
              <%= f.label :password_confirmation, class: 'col-lg-2 control-label'%>
              <div class="col-lg-8">
                <%= f.password_field :password_confirmation, required: true, class: 'form-control', :placeholder => "Confirm Password" %>
              </div>
            </div>
            
            <div class="form-group">
              <%= f.label :country, class: 'col-lg-2 control-label'%>
              <div class="col-lg-8">
                <%= f.text_field :country, required: true, class: 'form-control', :placeholder => "Country"%>
              </div>
            </div>

            <div class="form-group">
              <%= f.label :street, class: 'col-lg-2 control-label'%>
              <div class="col-lg-8">
                <%= f.text_field :street, required: true, class: 'form-control', :placeholder => "Street and #"%>
              </div>
            </div>

            <div class="form-group">
              <%= f.label :city, class: 'col-lg-2 control-label'%>
              <div class="col-lg-8">
                <%= f.text_field :city, required: true, class: 'form-control', :placeholder => "City" %>
              </div>
            </div>

            <div class="form-group">
              <%= f.label :state, class: 'col-lg-2 control-label'%>
              <div class="col-lg-8">
                <%= f.text_field :state, required: true, class: 'form-control', :placeholder => "State/Canton"%>
              </div>
            </div>

            <div class="modal-footer">
              <%= f.submit "Create Company", class: 'btn btn-primary' %>
            </div>

          </fieldset>
        <% end %>
      </div>
    </div>
  </div>
</div>