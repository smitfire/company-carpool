<div id="create_drive" class="modal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" id="close_modal" aria-hidden="true">Ã—</button>
        <h4 class="modal-title">Modal title</h4>
      </div>
      <div class="modal-body">
        <%= form_for user.driver_carpools.new, html:{class: 'form-signin'}, url: company_user_carpools_path(user.company, user) do |f| %>
          <h2 class="form-signin-heading">Create Ride</h2>
          
          <div class="form-group">
            <%= f.label :name, class: 'sr-only'%>
            <%= f.text_field :name, class: 'form-control', :placeholder => "Carpool Name" %>
          </div>
          <div class="form-group">
            <%= f.label :date, class: 'sr-only'%>
            
            <%= f.text_field :date, class: "datepicker" %>
          </div>
          <div class="form-group">
            <%= f.label :capacity, class: 'sr-only'%>
            <%= f.number_field :capacity %>
          </div>
          <div class="modal-footer">
            <%= f.submit "Create Drive", class: 'btn btn-primary' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>