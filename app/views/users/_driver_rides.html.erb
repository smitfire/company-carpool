<h2 class="center">Driver Rides</h2>
<div class="table-responsive">
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>Spaces Left</th>
          <th>Driver Name</th>
          <th>Group Name</th>
          <th>Date Time</th>
        </tr>
      </thead>
      <tbody>
        <% user.driver_carpools.each do |po_ride| %>
         <% if po_ride.driver.nil? %>
         <% else %>
           <tr>
             <td><%= po_ride.seats_remaining %></td>
             <td><%= po_ride.driver.name %></td>
             <td><%= po_ride.name %></td>
             
             <td><%= po_ride.date %></td>
           </tr> 
          <% end -%>        
        <% end -%>        
      </tbody>
    </table>
</div>